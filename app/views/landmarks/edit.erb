<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <label>Landmark Name: </label>
    <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"><br>

    <label>Landmark Year Completed: </label>
    <input type="integer" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"><br>

    <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
