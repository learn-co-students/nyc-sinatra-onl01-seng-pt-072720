<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Name: <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"> Year: <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed if !@landmark.year_completed.nil? %>" >

    <input type="submit" id="Edit Landmark" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
