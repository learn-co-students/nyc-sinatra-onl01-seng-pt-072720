<h2>Create New Figure</h2>
<form action='/figures' method="POST">
<p><label for="figure_name">Figure Name:</label>
<input type="text" name="figure[name]" id="figure_name"></input></p>


<br>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
    <% end %>

<h2>Create New Title</h2>
<label>Title Name:</label>
<input type="text" name="title[name]" id="new_title"></input>
<br>

<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
    <% end %>
<br>


<h3>New Landmark</h3>
<p><label>Landmark Name: </label><input type="text" name="landmark[name]" id="new_landmark"></input></p>
<p><label>Landmark Year Completed: </label><input type="text" name="landmark[year_completed]" id="landmark_year"></input></p>
<br>
<input type="submit" value="Create New Figure">
</form>
